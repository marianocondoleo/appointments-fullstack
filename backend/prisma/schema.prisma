// prisma/schema.prisma

datasource db {
  provider = "postgres"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  firstName String
  lastName  String
  phone     String
  address   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tasks     Task[]  
}

model Task {
  id        String        @id @default(uuid())
  title     String
  notes     String?
  deadline  DateTime

  status    TaskStatus    @default(ANALISIS)
  priority  TaskPriority  @default(MEDIUM)

  userId    String
  user      User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  @@index([userId])
}

enum TaskStatus {
  ANALISIS
  IN_PROGRESS
  COMPLETED
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}
